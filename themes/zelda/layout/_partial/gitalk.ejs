<div id="gitalk-container"></div>
<link rel="stylesheet" href="https://unpkg.com/gitalk/dist/gitalk.css" />
<script src="https://unpkg.com/gitalk/dist/gitalk.min.js"></script>
<script>
    const gitalk = new Gitalk({
        clientID: "<%= config['comment']['gitalk']['client_id'] %>",
        clientSecret: "<%= config['comment']['gitalk']['client_secret'] %>",
        repo: "<%= config['comment']['gitalk']['repo'] %>",
        owner: "<%= config['comment']['gitalk']['owner'] %>",
        admin: ["<%= config['comment']['gitalk']['owner'] %>"],
        id: location.pathname,
        distractionFreeMode: "<%= config['comment']['gitalk']['distraction_free_mode'] %>"
    });

    gitalk.render('gitalk-container');
</script>
